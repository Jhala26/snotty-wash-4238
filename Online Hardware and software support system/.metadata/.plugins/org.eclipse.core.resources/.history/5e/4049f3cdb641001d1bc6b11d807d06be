package com.masai.usecases;

import java.util.Scanner;

public class Starter {

	
	public static boolean RunApplication() {
		
		boolean finalRes = false;
		
		SupportCalling sps = new SupportCalling();
		
		System.out.println("\nPlease select an option to continue : \n");
		
		System.out.println("Selcet - 1 : HOD");
		System.out.println("Selcet - 2 : Engineer");
		System.out.println("Selcet - 3 : Employee");
		
		Scanner sc = new Scanner(System.in);
		
		int key = sc.nextInt();
		
		
		switch (key) {
		case 1: {
			
			boolean res = true;
			
			while(res) {
				
				System.out.println("\nPlease select an option to perform a task : \n");
				System.out.println("Selcet - 1 : Login as HOD");
				System.out.println("Selcet - 2 : Register a new Engineer");
				System.out.println("Selcet - 3 : List of all registered Engineer");
				System.out.println("Selcet - 4 : Delete an engineer from record");
				System.out.println("Selcet - 5 : See Raised Problems");
				System.out.println("Selcet - 6 : Assign complain to an engineer");
				
				int hodKey = sc.nextInt();
				
				switch (key) {
				
				case 1: {
					
					sps.HodUsecase();
				}
				case 2: {
					
					sps.registerEngineerUsecase();
				}
				case 3: {
					
					sps.deleteEngineerUsecase();
				}
				
				
				default:
					
				}
				
				
			}
			
			
			break;
			
		}
		default:
//			throw new IllegalArgumentException("Unexpected value: " + key);
		}
		
		
		
		
		return finalRes;
		
	}
	
	
	
	
}
